<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Pix.LerQRCode">
    <ContentPage.Content>
        <StackLayout>
            <Grid ColumnDefinitions="3"
                  RowDefinitions="Auto">
                <Label Text="Pix"
                       FontAttributes="Bold"
                       FontSize="15"
                       TextColor="Black"
                       HorizontalOptions="Center"
                       Grid.Column="2"
                       Margin="0, 40, 0, 0"/>

                <ImageButton x:Name="btnVoltar" Clicked="btnVoltar_Clicked" BackgroundColor="Transparent"
                         Scale="0.6" HorizontalOptions="Start" Grid.Column="1" Margin="10, 32, 0, 0"/>

                <ImageButton x:Name="btnDuvida" BackgroundColor="Transparent" Grid.Column="3" HorizontalOptions="End" VerticalOptions="Start" HeightRequest="25" 
                             Margin="0, 40, 20, 0" Clicked="btnDuvida_Clicked"/>
            </Grid>



            <Frame VerticalOptions="CenterAndExpand" HeightRequest="600" CornerRadius="15" Margin="15" BackgroundColor="LightGray">

            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>